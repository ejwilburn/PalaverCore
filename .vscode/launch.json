{
    "version": "0.2.0",
    "compounds": [{
        "name": "Launch Browser & Debug",
        "configurations": ["Kestrel Server - Debug", "Launch Chrome"]
    }],
    "configurations": [{
            "type": "coreclr",
            "request": "launch",
            "name": "Kestrel Server - Debug",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/bin/x64/Debug/netcoreapp1.1/PalaverCore.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
            "type": "coreclr",
            "request": "launch",
            "name": "Kestrel Server - Release",
            "preLaunchTask": "build-release",
            "program": "${workspaceRoot}/bin/x64/Release/netcoreapp1.1/PalaverCore.dll",
            "args": [
                "--configuration",
                "Release"
            ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.vscode/chrometemp",
            "runtimeArgs": [
                "--high-dpi-support=1",
                "--force-device-scale-factor=1"
            ],
            "url": "http://localhost:5001/",
            "webRoot": "${workspaceRoot}/wwwroot"
        }
    ]
}