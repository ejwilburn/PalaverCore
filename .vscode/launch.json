{
    "version": "0.2.0",
    "configurations": [{
            "name": "Kestrel Server",
            "type": "coreclr",
            "request": "launch",
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/bin/Debug/netcoreapp1.1/Palaver.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        /*
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command.pickProcess}"
        },
        */
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.chrometemp",
            "runtimeArgs": [
                "--high-dpi-support=1",
                "--force-device-scale-factor=1"
            ],
            "url": "https://localhost:5001/",
            "webRoot": "${workspaceRoot}/wwwroot"
        }
    ],
    "compounds": [{
        "name": "Full Debugging",
        "configurations": [
            "Kestrel Server",
            "Launch Chrome"
        ]
    }]
}