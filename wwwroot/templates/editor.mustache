<form id="inlineReplyForm" class="ui reply form full width fluid editor">
    <div class="field">
        <textarea id="inlineEditorArea"></textarea>
    </div>
    <div class="ui blue labeled submit icon button" onclick="sendReply({{#parentId}}{{parentId}}{{/parentId}}, 'inline')">
        <i class="icon edit"></i> Add Reply
    </div>
    <div class="ui red labeled cancel icon button" onclick="cancelReply('inline')">
        <i class="icon edit"></i> Cancel
    </div>
</form>
