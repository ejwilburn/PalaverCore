<div id="thread" class="pusher">
    <div class="ui container fluid minimal threaded comments" data-id="{{Id}}">
        <div id="threadTitle" class="ui fixed dividing header"><h3>{{Title}}<div class="sub header">{{UserName}}&nbsp;-&nbsp;<div class="date">{{CreatedDisplay}}</div></div></h3></div>
        {{#Comments}}
            {{>comment}}
        {{/Comments}}
    </div>

    <div id="editorHome" class="ui fluid full width container">
        <form id="editorForm" class="ui reply form full width fluid editor">
            <div class="field">
                <textarea id="editor"></textarea>
            </div>
            <div class="ui blue labeled submit icon button" onclick="sendReply()">
                <i class="icon edit"></i> Add Reply
            </div>
            <div class="ui red labeled cancel icon button" onclick="cancelReply()">
                <i class="icon edit"></i> Cancel
            </div>
        </form>
    </div>
</div>
