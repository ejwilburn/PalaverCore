<div id="thread" class="pusher">
    {{#Id}}
    <div class="ui white container fluid minimal threaded comments" data-id="{{Id}}">
        <div id="threadTitle" class="ui fixed dividing header"><h3>{{Title}}<div class="sub header">{{UserName}}&nbsp;-&nbsp;<span class="date">{{CreatedDisplay}}</span></div></h3></div>
        {{#Comments}}
            {{>comment}}
        {{/Comments}}
    </div>

    <div id="editorHome" class="ui fluid full width container">
        <form id="editorForm" class="ui reply form full width fluid editor">
            <div class="field">
                <textarea id="editor"></textarea>
            </div>
            <div class="ui blue labeled submit icon button" onclick="thread.sendReply();">
                <i class="icon edit"></i> Save
            </div>
            <div class="ui red labeled cancel icon button" onclick="thread.cancelReply();">
                <i class="icon edit"></i> Cancel
            </div>
        </form>
    </div>
    {{/Id}}
</div>
