@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div id="mainContent" class="ui raised very padded text container">
    <h3 class="ui header centered">@ViewData["Title"]</h3>
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="ui large form validate-me" role="form">
        <h4>Enter your email.</h4>
        <hr>
        <div class="ui segment">
            <div class="field">
                <div class="ui left icon input focus">
                    <i class="mail icon"></i>
                    <input asp-for="Email" placeholder="Email address"/>
                </div>
            </div>
            <button type="submit" class="ui large blue submit button">Reset</button>
            <div asp-validation-summary="All" class="ui error message"></div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
