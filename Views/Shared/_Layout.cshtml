<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Palaver</title>

    @RenderSection("asyncScripts", required: false)
    @RenderSection("styles", required: false)

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header id="topMenu" class="top fixed inverted">
        <a class="tablet mobile only" onclick="$('#threadList').sidebar('toggle');">
            Hamburger<i class="content icon"></i>
        </a>
        <div id="mobileUnread" class="secondary button tablet mobile only" onclick="thread.goToNextUnread();"></div>
        <a class="tablet or lower media-query-hidden" href="~/">Palaver</a>
        <div class="right menu">
            <div class="right aligned category search item">
                <div class="icon input">
                    <input class="prompt" type="text" placeholder="Search...">
                    <i class="search icon"></i>
                </div>
                <div id="searchResults" class="results"></div>
            </div>
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </header>

    @RenderBody()

    <script type="text/javascript">
        // jshint esversion:6
        const BASE_URL = "@Url.Content("~/")";
        const NOTIFICATION_ENABLED = true;
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
