@using Microsoft.AspNetCore.Identity
@using Palaver.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="item" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <a class="item" asp-area="" asp-controller="Account" asp-action="LogOff" title="LogOff">Log off</a>
}
else
{
    <a class="item" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    <a class="item" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
}
